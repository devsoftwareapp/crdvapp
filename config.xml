<?xml version='1.0' encoding='utf-8'?>
<widget id="com.devsoftware.pdfreader" version="1.0.0"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>PDF Reader</name>
    <description>Professional PDF viewer and editor!</description>

    <author email="devsoftwaremail@gmail.com" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>

    <!-- Uygulama başlangıç dosyası -->
    <content src="web/index.html" />

    <!-- İzin verilen dış linkler -->
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <!-- Splash Screen Ayarları -->
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value="500" />
    <preference name="AndroidWindowSplashScreenAnimatedIcon" value="res/screen/android/splashscreen.xml" />
    <preference name="AndroidWindowSplashScreenBackground" value="#ffffff" />
    <preference name="AndroidPostSplashScreenTheme" value="@style/Theme.AppCompat.NoActionBar"/>

    <!-- Android platform icon ve splash -->
    <platform name="android">
        <icon src="res/android/icon.png" />
        <splash src="res/screen/android/splash.png" density="xxxhdpi"/>
    </platform>

    <!-- Gerekli Cordova Pluginleri -->
    <plugin name="cordova-plugin-file" />
    <plugin name="cordova-plugin-android-permissions" />

    <!-- Intent Shim (SAF klasör seçimi için gerekli) -->
    <plugin name="cordova-plugin-intent" />

    <!-- Android Storage Access Framework uyumlu gelişmiş filepicker -->
    <plugin name="cordova-plugin-filepicker-android" />

</widget>
